@model UpsertSkillVm

<div class="modal fade" id="btnSkillAddModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add Skill</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="skillAddModalBody" asp-action="Upsert" asp-controller="Skill" method="post">
                    <div class="form-group">
                        <div class="row mb-3 px-2">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" placeholder="Skill name" class="form-control" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row mb-3 px-2">
                            <label asp-for="Status" class="form-label"></label>
                            <select class="form-select" id="Status" asp-for="Status">
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                            <span asp-validation-for="Status"></span>
                        </div>
                    </div>

                    <div class="text-end row my-2 px-2"></div>
                    <input type="submit" class="btn btn-primary" value="Save" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </form>
            </div>
        </div>
    </div>
</div>
